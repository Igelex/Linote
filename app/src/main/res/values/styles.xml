<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/appbar_elevation</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="appbar_elevation" parent="style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- Remove the shadow below the app bar -->
        <item name="elevation">0dp</item>
    </style>

    <!-- Base Tabs Style. -->
    <style name="tabs_style" parent="Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabGravity">fill</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#c1c1c1</item>
    </style>

    <!-- Card TextView Style. -->
    <style name="card_textview">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- Card Menu Bar Style. -->
    <style name="card_menu_bar">
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <!-- Spinners Style. -->
    <style name="spinners_style">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

</resources>
