<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/appbar_elevation</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="appbar_elevation" parent="style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- Remove the shadow below the app bar -->
        <item name="elevation">0dp</item>
    </style>

    <!-- Theme of the editor -->
    <style name="EditorTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorEditorPrimary</item>
        <item name="colorPrimaryDark">@color/colorEditorPrimaryDark</item>
        <item name="colorAccent">@color/colorEditorAccent</item>
    </style>

    <!-- Theme of the Details-Screen -->
    <style name="Details_Screen" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorDetailsPrimary</item>
        <item name="colorPrimaryDark">@color/colorDetailPrimaryDark</item>
        <item name="colorAccent">@color/colorDetailAccent</item>
    </style>

    <!-- Base Tabs Style. -->
    <style name="tabs_style" parent="Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabGravity">fill</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#c1c1c1</item>
    </style>

    <!-- Card TextView Style. -->
    <style name="card_textview">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- Card Menu Bar Style. -->
    <style name="card_menu_bar">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <!-- Spinners Style. -->
    <style name="spinners_style">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- MarginLeft for Userinputs like Spinner and TextFields. -->
    <style name="inputs">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <!-- For Section Inputs in AddNewWord. -->
    <style name="section_text">
        <item name="android:textColor">@color/section_text_color</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- res/values/styles.xml -->
    <style name="progressBar" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorProgresBar</item>
    </style>

    <!-- Emty View textstyle -->
    <style name="empty_text_style">
        <item name="android:textColor">@color/colorEmptyText</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sens-serif-light</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>


</resources>
