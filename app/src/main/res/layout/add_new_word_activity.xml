<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/desc_add_new_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_your_new_word"
            style="@style/section_text"/>

        <Spinner
            android:id="@+id/chose_lang_spinner"
            style="@style/spinners_style"
            android:layout_width="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/inputlayout_word">

            <EditText
                android:id="@+id/input_word"
                style="@style/inputs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/word"
                android:maxLines="1" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/inputlayout_translation">

        <EditText
            android:id="@+id/input_translation"
            style="@style/inputs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/translation"
            android:inputType="textMultiLine"
            android:maxLines="5" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/desc_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/details"
            style="@style/section_text"/>

        <LinearLayout
            style="@style/inputs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_partofspeech"
                style="@style/spinners_style"
                android:layout_marginEnd="16dp" />

            <Spinner
                android:id="@+id/spinner_article"
                style="@style/spinners_style"
                android:layout_width="wrap_content" />

        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/inputlayout_description">

        <EditText
            android:id="@+id/input_description"
            style="@style/inputs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/description"
            android:inputType="textMultiLine"
            android:maxLines="5" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/desc_examples"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/examples"
            style="@style/section_text"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/inputlayout_collocations">

        <EditText
            android:id="@+id/input_collocations"
            style="@style/inputs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/collocations"
            android:inputType="textMultiLine"
            android:maxLines="5" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/inputlayout_examples">

        <EditText
            android:id="@+id/input_examples"
            style="@style/inputs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/examples"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:layout_marginBottom="48dp"/>

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

</ScrollView>